# БОГ || OASIS v6 — Environment Variables
# Copy to .env and fill in your values

# LLM model (Ollama name or mlx-community/... for MLX)
GODLOCAL_MODEL=qwen3:8b
GODLOCAL_DEVICE=mps

# API server
GODLOCAL_API_HOST=0.0.0.0
GODLOCAL_API_PORT=8000
GODLOCAL_API_KEY=              # leave empty to disable auth

# Sleep cycle (UTC)
GODLOCAL_SLEEP_HOUR=1
GODLOCAL_SLEEP_MINUTE=0

# Memory
GODLOCAL_SHORT_TERM_LIMIT=50
GODLOCAL_MEMORY_PATH=godlocal_data/memory

# AutoGenesis
GODLOCAL_AUTOGENESIS_APPLY=false   # set true to enable live code patching

# Sonic gateway
GODLOCAL_SONIC_HOST=0.0.0.0
GODLOCAL_SONIC_PORT=9000

# Logging
GODLOCAL_LOG_LEVEL=INFO
GODLOCAL_LOG_JSON=false
