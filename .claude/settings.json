{
  "permissions": {
    "allow": [
      "Bash(git*)",
      "Bash(python*)",
      "Bash(cargo*)",
      "Bash(curl*)",
      "Bash(ghostty*)",
      "Bash(lazygit*)",
      "Bash(yazi*)",
      "Bash(npm*)",
      "Bash(node*)"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {"type": "command", "command": "bash .claude/hooks/pre-tool-use.sh"}
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {"type": "command", "command": "bash .claude/hooks/post-tool-use.sh"}
        ]
      }
    ]
  },
  "worktree": {
    "command": "bash .claude/hooks/worktree-godlocal.sh"
  },
  "env": {
    "GODLOCAL_BASE_URL": "http://localhost:8000",
    "CLAUDE_AGENT_ID": "autogenesis"
  }
}